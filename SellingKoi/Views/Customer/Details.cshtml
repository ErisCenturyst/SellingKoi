@model SellingKoi.Models.Entities.Customer

@{
    ViewData["Title"] = "Customer Details";
}

<div class="container mt-4">
    <h2>Customer Details</h2>

    <div class="card">
        <div class="card-header">
            <h3>@Model.Name</h3>
        </div>
        <div class="card-body">
            <dl class="row">
                <dt class="col-sm-3">Customer ID:</dt>
                <dd class="col-sm-9">@Model.Id</dd>

                <dt class="col-sm-3">Email:</dt>
                <dd class="col-sm-9">@Model.Email</dd>

                <dt class="col-sm-3">Phone:</dt>
                <dd class="col-sm-9">@Model.Phone</dd>

                <dt class="col-sm-3">Address:</dt>
                <dd class="col-sm-9">@Model.Address</dd>

                <dt class="col-sm-3">Registration Date:</dt>
                <dd class="col-sm-9">@Model.Registration_date.ToShortDateString()</dd>
            </dl>
        </div>
        <div class="card-footer">
            <a asp-action="EditCustomer" asp-route-id="@Model.Id" class="btn btn-primary">Edit</a>
            <a asp-action="CustomerManagement" class="btn btn-secondary">Back to List</a>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
